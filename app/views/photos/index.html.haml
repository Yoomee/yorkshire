-title "Photos"  
.row-fluid.mt-2
  .span12
    -@photos.each_slice(4) do |photos|
      .row-fluid.mb-2
        -photos.each do |photo|
          .span3.photo
            =link_to(image_for(photo, "320x320#"), photo)
            -if photo.caption.present?
              %p.photo-caption.mt-1=photo.caption
          
-if can?(:new, Photo)
  .row-fluid
    .span12
      =options_panel do
        =link_to("+ Add a photo", new_photo_path, :class => "btn")