.container
.container.mt-1
  .row
    .span12
      %ul.unstyled
        -@page.children.order('position').each_with_index do |child, index|
          %li
            =link_to(child) do
              =image_tag(child.app_header_image_url)
            =link_to(child, child, :class => "page-link page-link-#{index}", :style => "background-color:#{child.app_link_color};")
    .span8
      =options_panel do
        =link_if_can("Edit page", [:edit, @page])
        =link_if_can("Delete page", [:destroy, @page], :confirm => "Are you sure?") unless @page.slug.present?
        =link_if_can("New page", [:new, Page])
